{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "yarn run start:backend & yarn run start:frontend",
    "start:backend": "yarn lerna run start --scope=backend",
    "start:frontend": "yarn lerna run dev --scope=frontend",
    "dev": "yarn run start",
    "stop": "pkill -f 'serverless offline' || true && pkill -f 'vite' || true",
    "install:all": "yarn install && yarn lerna bootstrap",
    "clean": "yarn lerna clean --yes && rm -rf node_modules"
  },
  "dependencies": {},
  "devDependencies": {
    "lerna": "^8.1.3"
  }
}
